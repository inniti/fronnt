{
  "name": "@inniti/middle",
  "version": "1.0.0-alpha.22",
  "description": "Scalable eCommerce GraphQL API middleware architecture",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "types": "types",
  "author": "inniti",
  "keywords": [
    "middleware",
    "graphql",
    "eCommerce",
    "api"
  ],
  "license": "MIT",
  "scripts": {
    "build": "npm run codegen && node ./build.js",
    "lint": "eslint src/**/*.ts",
    "codegen": "rimraf types/generated && graphql-codegen --config codegen.yml && prettier --write types/generated",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "dependencies": {
    "apollo-server": "^3.5.0",
    "graphql": "^15.7.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@luckycatfactory/esbuild-graphql-loader": "^3.6.0",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "esbuild": "^0.8.57",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "graphql-tag": "^2.11.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{ts,graphql}": "prettier --write"
  }
}
